<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/search_plate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="4dip"
        android:layout_weight="1"
        android:background="@drawable/textfield_searchview_holo_light"
        android:orientation="horizontal" >

        <AutoCompleteTextView
            android:id="@+id/search_src_text"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/searchview_description_query"
            android:dropDownHeight="wrap_content"
            android:dropDownHorizontalOffset="0dip"
            android:dropDownVerticalOffset="0dip"
            android:ellipsize="end"
            android:hint="@string/search_go"
            android:imeOptions="actionSearch"
            android:inputType="text|textAutoComplete|textNoSuggestions"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/search_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/item_background_holo_light"
            android:contentDescription="@string/searchview_description_clear"
            android:focusable="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_clear_holo_light" />
    </LinearLayout>

</LinearLayout>